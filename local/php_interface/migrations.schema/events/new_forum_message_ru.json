{
    "event": "NEW_FORUM_MESSAGE",
    "type": {
        "LID": "ru",
        "EVENT_TYPE": "email",
        "NAME": "Новое сообщение на форуме",
        "DESCRIPTION": [
            "",
            "\t\t\t#FORUM_ID# - ID форума",
            "\t\t\t#FORUM_NAME# - Название форума",
            "\t\t\t#TOPIC_ID# - ID темы",
            "\t\t\t#MESSAGE_ID# - ID сообщения",
            "\t\t\t#TOPIC_TITLE# - Тема сообщения",
            "\t\t\t#MESSAGE_TEXT# - Текст сообщения",
            "\t\t\t#MESSAGE_DATE# - Дата сообщения",
            "\t\t\t#AUTHOR# - Автор сообщения",
            "\t\t\t#RECIPIENT# - Получатель сообщения",
            "\t\t\t#TAPPROVED# - Тема сообщения показывается",
            "\t\t\t#MAPPROVED# - Тело сообщения показывается",
            "\t\t\t#PATH2FORUM# - Адрес сообщения",
            "\t\t\t#FROM_EMAIL# - E-Mail для поля From письма"
        ],
        "SORT": "100"
    },
    "messages": [
        {
            "LID": [
                "s1"
            ],
            "ACTIVE": "Y",
            "EMAIL_FROM": "#FROM_EMAIL#",
            "EMAIL_TO": "#RECIPIENT#",
            "SUBJECT": "#SITE_NAME#: [F] #TOPIC_TITLE# : #FORUM_NAME#",
            "MESSAGE": [
                "Информационное сообщение сайта #SITE_NAME#",
                "------------------------------------------",
                "",
                "Новое сообщение на форуме #SERVER_NAME#.",
                "",
                "Тема:",
                "#TOPIC_TITLE#",
                "",
                "Автор: #AUTHOR#",
                "Дата : #MESSAGE_DATE#",
                "Текст сообщения:",
                "",
                "#MESSAGE_TEXT#",
                "",
                "Адрес сообщения:",
                "http:\/\/#SERVER_NAME##PATH2FORUM#",
                "",
                "Сообщение сгенерировано автоматически.",
                ""
            ],
            "BODY_TYPE": "text",
            "BCC": null,
            "REPLY_TO": null,
            "CC": null,
            "IN_REPLY_TO": null,
            "PRIORITY": null,
            "FIELD1_NAME": null,
            "FIELD1_VALUE": null,
            "FIELD2_NAME": null,
            "FIELD2_VALUE": null,
            "SITE_TEMPLATE_ID": null,
            "ADDITIONAL_FIELD": [],
            "LANGUAGE_ID": null,
            "EVENT_TYPE": "[ NEW_FORUM_MESSAGE ] Новое сообщение на форуме"
        }
    ]
